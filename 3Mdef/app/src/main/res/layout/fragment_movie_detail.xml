<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_background"
        android:elevation="8dp"
        android:layout_gravity="center">

        <!-- Imagen de la película -->
        <ImageView
            android:id="@+id/moviePosterDetail"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_image_border"
            android:layout_marginTop="16dp" />

        <!-- Título de la película -->
        <TextView
            android:id="@+id/movieTitleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="26sp"
            android:fontFamily="@font/rubikbolditalic"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Título de la película" />

        <!-- Rating de la película -->
        <TextView
            android:id="@+id/movieRatingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/rubikregular"
            android:textColor="@android:color/darker_gray"
            android:layout_marginBottom="12dp"
            android:text="Rating: 8.5 / 10"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <!-- Descripción de la película -->
        <TextView
            android:id="@+id/movieOverviewDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/rubikregular"
            android:layout_marginBottom="16dp"
            android:text="Descripción de la película..."
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <!-- Fecha de lanzamiento -->
        <TextView
            android:id="@+id/movieReleaseDateDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/rubikregular"
            android:textColor="@android:color/tertiary_text_light"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Fecha de lanzamiento: 01/01/2024"/>


    </LinearLayout>
</ScrollView>
